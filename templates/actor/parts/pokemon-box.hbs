<div class="pta-tab">
    <div class="flexrow" style="justify-content: flex-start; align-items: flex-start;">
        {{!-- Active pokemon team --}}
        <div class="flexcol" style="flex: 1;">
            <span class="items-header flexrow">
                <span class="item-name">Pokemon Team</span>
            </span>
            <ol class="pta-pokemon-team">
                {{#each pokemon as | pokemon key |}}
                    {{#if pokemon.active}}
                        <li class="pta-pokemon" data-pokemon-uuid="{{pokemon.uuid}}">
                            <div class="portrait">
                                <a data-action="pokemonSheet">
                                    <img src="{{pokemon.img}}">
                                </a>
                            </div>
                            <div class="details">
                                <div class="flexrow">
                                    <div class="nickname pta-font-l">{{pokemon.name}}</div>
                                    <button class="flex0" style="padding: 2px;" type="button" data-action="pokemonBox" title="PTA.TitleHint.Box"><i style="margin: 0;" class="fas fa-box-archive"></i></button>
                                </div>
                                <div class="health">
                                    <div class="progress-bar round pta-xs">
                                        <label>HP</label>
                                        <div class="wrapper">
                                            <div class="bar {{#if (lt (divide pokemon.data.hp.value pokemon.data.hp.max) 0.33)}}red{{else}}green{{/if}}" style="width: {{multiply 100 (divide pokemon.data.hp.value pokemon.data.hp.max)}}%">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div style="font-weight: bold;">{{pokemon.data.hp.value}}/{{pokemon.data.hp.max}}</div>
                            </div>
                        </li>
                    {{/if}}
                {{/each}}
            </ol>
        </div>
        {{!-- Storage box --}}
        {{!--
            3 different display modes:
            - List
            - Detailed
            - Grid
        --}}
        <div class="flexcol" style="flex: 2;">
            <span class="items-header flexrow">
                <span class="item-name">Pokemon Box</span>
                <span>Controls</span>
                <span class="flexshrink" style="align-items: flex-end; text-align: right; justify-content: flex-end;">
                    <a style="margin: 0 0.2em;"><i class="fas fa-address-card"></i></a>
                    <a style="margin: 0 0.2em;"><i class="fas fa-list"></i></a>
                    <a style="margin: 0 0.2em;"><i class="fas fa-grid-2"></i></a>
                </span>
            </span>
            <ol class="pta-pokemon-box items-list">
                {{#each pokemon as | pokemon key |}}
                    {{#if (not pokemon.active)}}
                        <li class="item flexrow" data-pokemon-uuid="{{pokemon.uuid}}">
                            <div class="item-name">
                                <div class="item-image">
                                    <a data-action="pokemonSheet">
                                        <img src="{{pokemon.img}}" title="{{pokemon.name}}">
                                    </a>
                                </div>
                                <div>{{pokemon.name}}</div>
                            </div>
                            <div class="item-controls">
                                <a class="item-control" data-action="pokemonUnbox" title="PTA.TitleHint.Unbox">
                                    <i class="fas fa-box-open"></i>
                                </a>
                                <a class="item-control" data-action="pokemonRemove" title="PTA.TitleHint.Delete">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </div>
                        </li>
                    {{/if}}
                {{/each}}
            </ol>
        </div>
    </div>
</div>