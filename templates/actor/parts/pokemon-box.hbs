<div class="pta-tab">
    {{!-- Active pokemon team --}}
    <span class="items-header flexrow">
        <span class="item-name">Pokemon Team</span>
        <span>Controls</span>
    </span>
    <ol class="pta-pokemon-box items-list">
        {{#each pokemon as | pokemon key |}}
            {{#if pokemon.active}}
                <li class="item flexrow" data-pokemon-uuid="{{pokemon.uuid}}">
                    <div class="item-name">
                        <div class="item-image">
                            <a data-action="pokemonSheet">
                                <img src="{{pokemon.img}}" title="{{pokemon.name}}">
                            </a>
                        </div>
                        <div>{{pokemon.name}}</div>
                    </div>
                    <div class="item-controls">
                        <a class="item-control" data-action="pokemonActivate">
                            <i class="fas fa-down"></i>
                        </a>
                        <a class="item-control">
                            <i class="fas fa-trash"></i>
                        </a>
                    </div>
                </li>
            {{/if}}
        {{/each}}
    </ol>
    {{!-- Storage box --}}
    <span class="items-header flexrow">
        <span class="item-name">Pokemon Box</span>
        <span>Controls</span>
    </span>
    <ol class="pta-pokemon-box items-list">
        {{#each pokemon as | pokemon key |}}
            {{#if (not pokemon.active)}}
                <li class="item flexrow" data-pokemon-uuid="{{pokemon.uuid}}">
                    <div class="item-name">
                        <div class="item-image">
                            <a data-action="pokemonSheet">
                                <img src="{{pokemon.img}}" title="{{pokemon.name}}">
                            </a>
                        </div>
                        <div>{{pokemon.name}}</div>
                    </div>
                    <div class="item-controls">
                        <a class="item-control" data-action="pokemonActivate">
                            <i class="fas fa-up"></i>
                        </a>
                        <a class="item-control" data-action="pokemonRemove">
                            <i class="fas fa-trash"></i>
                        </a>
                    </div>
                </li>
            {{/if}}
        {{/each}}
    </ol>
</div>