{{!-- Storage box
    3 different display modes:
    - List
    - Detailed
    - Grid
--}}
<div class="flexcol" style="flex: 2;">
    <span class="items-header flexrow">
        <span class="item-name">Pokemon Box</span>
        <span>Controls</span>
        <span class="flexrow flex-group-right flex-gap-s" style="text-align: right;">
            <a class="flex0"><i class="fas fa-address-card"></i></a>
            <a class="flex0"><i class="fas fa-list"></i></a>
            <a class="flex0"><i class="fas fa-grid-2"></i></a>
        </span>
    </span>
    {{!-- Search options for filtering the pokemon list --}}
    <span class="pta-trainer-box-search">

    </span>
    {{!-- List of pokemon in the trainers box --}}
    <ol class="pta-pokemon-box items-list">
        {{#each pokemon as | pokemon key |}}
            {{#if (not pokemon.active)}}
                <li class="item flexrow" data-pokemon-uuid="{{pokemon.uuid}}">
                    <div class="item-name">
                        <div class="item-image">
                            <a data-action="pokemonSheet">
                                <img src="{{pokemon.img}}" title="{{pokemon.name}}">
                            </a>
                        </div>
                        <div>{{pokemon.name}}</div>
                    </div>
                    <div class="item-controls">
                        <a class="item-control" data-action="pokemonUnbox" title="PTA.TitleHint.Unbox">
                            <i class="fas fa-box-open"></i>
                        </a>
                        <a class="item-control" data-action="pokemonRemove" title="PTA.TitleHint.Delete">
                            <i class="fas fa-trash"></i>
                        </a>
                    </div>
                </li>
            {{/if}}
        {{/each}}
    </ol>
</div>