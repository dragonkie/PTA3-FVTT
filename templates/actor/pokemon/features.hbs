{{#*inline 'pokemon-move'}}
    <li class="item flexrow" data-item-uuid="{{item.uuid}}" data-uuid="{{item.uuid}}" draggable="true">
        <div class="item-name">
            <div class="item-image">
                <a data-action="itemUse">
                    <img src="{{item.img}}" title="{{item.name}}">
                </a>
            </div>
            <div>{{item.name}}</div>
        </div>
        <div class="item-controls">
            <a class="item-control" data-action="itemEdit" title="Edit">
                <i class="fas fa-edit"></i>
            </a>
            <a class="item-control" data-action="itemDelete" title="Update undefined">
                <i class="fas fa-trash"></i>
            </a>
        </div>
    </li>
{{/inline}}

<div class="flexrow align-left">
    <div class="flex0">
        <div data-application-part="abilities"></div>
    </div>
    <div style="align-self: flex-start;">
        <span class="items-header flexrow">
            <span class="item-name">Moves</span>
            <span>Controls</span>
        </span>
        <ol class="pta-move-list items-list">
            {{#each items as | item key |}}
                {{> 'pokemon-move' item=item}}
            {{/each}}
        </ol>
    </div>
</div>